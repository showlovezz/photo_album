<% if @photo.errors.present? %>
	<ul>
		<% @photo.errors.each do |error, message| %>
			<li> <%= "#{error.capitalize} #{message}" %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @photo do |f| %>
	<div class ="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<br>
	<div class ="form-group">
		<%= f.label :date %>
		<%= f.text_field :date, class: "form-control" %>
    </div>
	<br>
	<div class ="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>	
	<br>
	<div class ="form-group">
		<%= f.label :file_location %>
		<%= f.file_field :file_location, class: "form-control" %>
	</div>	
	<br>
	<%= f.submit %>

<% end %>				
